<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="#dfdfdf"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        android:padding="20dp">

    <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" card_view:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/cover" android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent" card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="Track Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trackTitle"
                card_view:layout_constraintTop_toTopOf="@+id/cover"
                card_view:layout_constraintStart_toEndOf="@+id/cover" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="18sp"/>
        <TextView
                android:text="User Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username" android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toBottomOf="@+id/cover"
                card_view:layout_constraintStart_toEndOf="@+id/cover" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timestamp"
                card_view:layout_constraintTop_toTopOf="@+id/trackTitle" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>